// Example: Simple color change animation
let colors = ["#ff9999", "#99ccff", "#ccffcc", "#ffff99"];
let i = 0;

setInterval(function() {
    document.body.style.backgroundColor = colors[i];
    i = (i + 1) % colors.length;
}, 5000);